<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="3.1"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
  
    <!-- Display name for the application -->
    <display-name>TutoringWebApp</display-name>

    <!-- Welcome page configuration -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Servlet configurations for the application -->
    <servlet>
        <servlet-name>MyStudent</servlet-name>
        <servlet-class>com.tutoringapp.servlets.MyStudent</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MyStudent</servlet-name>
        <url-pattern>/myStudent/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MyTutor</servlet-name>
        <servlet-class>com.tutoringapp.servlets.MyTutor</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MyTutor</servlet-name>
        <url-pattern>/myTutor/*</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>MyTutorCourses</servlet-name>
        <servlet-class>com.tutoringapp.servlets.MyTutorCourses</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MyTutorCourses</servlet-name>
        <url-pattern>/myTutorCourses/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MyCourse</servlet-name>
        <servlet-class>com.tutoringapp.servlets.MyCourse</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MyCourse</servlet-name>
        <url-pattern>/myCourse/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MyEnrollment</servlet-name>
        <servlet-class>com.tutoringapp.servlets.MyEnrollment</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MyEnrollment</servlet-name>
        <url-pattern>/myEnrollment/*</url-pattern>
    </servlet-mapping>
</web-app>
